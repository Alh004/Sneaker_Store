@page
@model Sneaker_Store.Pages.SkoIndexModel
@{
    ViewData["Title"] = "Sneaker Store";
}

<h2>Available Shoes</h2>

<!-- Basket button -->
<a asp-page="BasketIndex" class="btn btn-primary">Go to Basket</a>

<form method="post">
    <select asp-for="SelectedBrand" asp-items="@(new SelectList(Model.Brands))">
        <option value="">All Brands</option>
    </select>
    <select asp-for="PriceFilter">
        <option value="">No Filter</option>
        <option value="Lowest">Lowest Price</option>
        <option value="Highest">Highest Price</option>
    </select>
    <button type="submit" asp-page-handler="Filter">Filter</button>
</form>

<div>
    @foreach (var sko in Model.Skos)
    {
        <div class="shoe-item">
            <img src="@sko.ImageUrl" alt="@sko.Model" width="200" />
            <h3>@sko.Maerke @sko.Model</h3>
            <p>Size: @sko.Str</p>
            <p>Price: @sko.Pris.ToString("C")</p>
            <form method="post">
                <input type="hidden" name="SelectedSkoId" value="@sko.SkoId" />
                <button type="submit" formaction="/SkoIndex?handler=AddToBasket">Add to Basket</button>
            </form>
        </div>
    }
</div>

<style>
    .shoe-item {
        border: 1px solid #ddd;
        padding: 10px;
        margin: 10px;
        text-align: center;
        display: inline-block;
        width: 220px;
    }

    .shoe-item img {
        max-width: 100%;
        height: auto;
    }
</style>