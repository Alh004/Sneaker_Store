@page
@model Sneaker_Store.Pages.common.KurvIndexModel
@{
    ViewData["Title"] = "Your Basket";
}

<h2>Your Basket</h2>

@if (Model.Skos != null && Model.Skos.Any())
{
    <div class="row">
        @foreach (var sko in Model.Skos)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@sko.ImageUrl" class="card-img-top" alt="Shoe Image">
                    <div class="card-body">
                        <h5 class="card-title">@sko.Maerke - @sko.Model</h5>
                        <p class="card-text">Size: @sko.Str</p>
                        <p class="card-text">Price: @sko.Pris DKK</p>
                        <form method="post">
                            <input type="hidden" name="SkoId" value="@sko.SkoId" />
                            <button type="submit" asp-page-handler="DeleteFromBasket" class="btn btn-danger">Remove</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Your basket is empty.</p>
}

<a asp-page="/common/SkoIndex" class="btn btn-primary">Back to Shoes</a>